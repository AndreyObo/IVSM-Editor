<Window x:Class="IVSMlib.Windows.WRow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVSMlib.Windows"
        mc:Ignorable="d"
        Title="WRow" Height="85" Width="30" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <Button x:Name="Up_Button" Click="Up_Row" Background="White" Width="25" Height="25">
                <Image Source="../Res/RowColW/a_up.png"/>
            </Button>
            <Button Click="Del_Row" Background="White" Margin="0,5,0,5"  Width="25" Height="25">
                <Image Source="../Res/RowColW/del.png"/>
            </Button>
            <Button x:Name="Down_Button" Click="Down_Row" Background="White" Width="25" Height="25">
                <Image Source="../Res/RowColW/a_down.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
