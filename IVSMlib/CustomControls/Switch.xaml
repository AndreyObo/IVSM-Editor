<UserControl x:Class="IVSMlib.CustomControls.Switch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IVSMlib.CustomControls"
             mc:Ignorable="d" Width="170" Height="25">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas MouseEnter="Canvas_MouseEnter" MouseLeave="Canvas_MouseLeave" MouseDown="Canvas_MouseDown" Grid.Column="0">
            <Rectangle x:Name="rect" Fill="White" Width="40" Height="15" RadiusX="5" RadiusY="5" Margin="5,5,5,5" />
            <Ellipse x:Name="swich_el" Fill="Red" Width="20" Height="20" Canvas.Left="4" Canvas.Top="2" />
        </Canvas>

        <TextBlock FontWeight="Medium" Foreground="White" FontSize="14" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Lable" Text="Редактирование"/>
    </Grid>
</UserControl>
